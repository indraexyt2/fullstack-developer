<h1 class="text-3xl font-bold text-center my-8">Daftar Mahasiswa</h1>

<a href="/add" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Tambah Mahasiswa</a>

<table class="min-w-full mt-4 bg-white shadow-md rounded border-collapse">
    <thead>
        <tr>
            <th class="border px-4 py-2">Nama</th>
            <th class="border px-4 py-2">NIM</th>
            <th class="border px-4 py-2">Email</th>
            <th class="border px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% students.forEach(function(student){ %>
        <tr>
            <td class="border px-4 py-2"><%= student.name %></td>
            <td class="border px-4 py-2"><%= student.nim %></td>
            <td class="border px-4 py-2"><%= student.email %></td>
            <td class="border px-4 py-2">
                <a href="/edit/<%= student._id %>" class="bg-yellow-500 hover:bg-yellow-700 text-white py-1 px-2 rounded">Edit</a>
                <form action="/delete/<%= student._id %>" method="POST" class="inline-block">
                    <button type="submit" class="bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded">Hapus</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
